{
    "manifest_version": 3,
    "name": "Guitar Tab Archiver",
    "version": "0.1.2",
    "description": "Archives guitar chords and tabs from ultimate-guitar.com while you browse.",
    "icons": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.ultimate-guitar.com/*"],
        "js": ["browser-polyfill.min.js", "ug.js"]
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "options_ui": {
      "page": "options.html"
    }
  }
