{
    "manifest_version": 2,
    "name": "Tab Archiver",
    "version": "0.3.0",
    "description": "Archives guitar chords and tabs from ultimate-guitar.com",
    "icons": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.ultimate-guitar.com/*"],
        "js": ["browser-polyfill.min.js", "ug.js"]
      }
    ],
    "background": {
      "scripts": ["browser-polyfill.min.js", "background.js"],
      "persistent": false,
      "type": "module"
    },  
    "permissions": ["storage"],
    "browser_action": {
      "default_popup": "popup.html",
      "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      }
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "gcta@wginsberg.ca"
      }
    }
  }
